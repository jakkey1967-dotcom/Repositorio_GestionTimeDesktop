<UserControl
    x:Class="GestionTime.Desktop.Controls.DonutChartControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="400">
    
    <Grid>
        <!-- Canvas principal para el donut -->
        <Canvas x:Name="ChartCanvas"
                Width="400"
                Height="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                PointerMoved="OnCanvasPointerMoved"
                PointerExited="OnCanvasPointerExited"
                Tapped="OnCanvasTapped">
        </Canvas>
        
        <!-- Tooltip flotante -->
        <Border x:Name="TooltipBorder"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12,8"
                Visibility="Collapsed"
                Canvas.ZIndex="1000">
            <TextBlock x:Name="TooltipText"
                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                       FontSize="12"
                       TextWrapping="Wrap"
                       MaxWidth="200"/>
        </Border>
    </Grid>
</UserControl>
