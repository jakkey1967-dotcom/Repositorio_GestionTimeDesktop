<UserControl
    x:Class="GestionTime.Desktop.Controls.NotificationHost"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:notif="using:GestionTime.Desktop.Services.Notifications"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="400">

    <UserControl.Resources>
        <!-- Estilos de notificaciones por tipo -->
        <SolidColorBrush x:Key="InfoBrush" Color="#007BFF"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#28A745"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#DC3545"/>
        
        <!-- Template de tarjeta de notificación -->
        <DataTemplate x:Key="NotificationCardTemplate" x:DataType="notif:NotificationItem">
            <Border
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{x:Bind AccentBrush, Mode=OneWay}"
                BorderThickness="0,0,0,2"
                CornerRadius="8"
                Padding="16,12"
                Margin="0,0,0,8"
                MaxWidth="400"
                MinWidth="320"
                HorizontalAlignment="Right">
                
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Icono -->
                    <FontIcon
                        Grid.Column="0"
                        Glyph="{x:Bind Icon, Mode=OneWay}"
                        Foreground="{x:Bind AccentBrush, Mode=OneWay}"
                        FontSize="20"
                        Margin="0,0,12,0"
                        VerticalAlignment="Top"/>
                        
                    <!-- Contenido -->
                    <StackPanel Grid.Column="1" Spacing="4">
                        <!-- Título (opcional) -->
                        <TextBlock
                            Text="{x:Bind Title, Mode=OneWay}"
                            Visibility="{x:Bind Title, Converter={StaticResource StringToVisibilityConverter}, Mode=OneWay}"
                            FontWeight="SemiBold"
                            FontSize="14"
                            TextWrapping="NoWrap"
                            TextTrimming="CharacterEllipsis"/>
                        
                        <!-- Mensaje -->
                        <TextBlock
                            Text="{x:Bind Message, Mode=OneWay}"
                            FontSize="13"
                            TextWrapping="Wrap"
                            MaxLines="4"
                            TextTrimming="CharacterEllipsis"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        
                        <!-- Acciones (si existen) -->
                        <ItemsControl
                            ItemsSource="{x:Bind Actions, Mode=OneWay}"
                            Margin="0,8,0,0"
                            Visibility="{x:Bind Actions.Count, Converter={StaticResource CountToVisibilityConverter}, Mode=OneWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="notif:NotificationAction">
                                    <Button
                                        Content="{x:Bind Label}"
                                        FontSize="12"
                                        Padding="12,6"
                                        Style="{ThemeResource AccentButtonStyle}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Botón cerrar -->
                    <Button
                        Grid.Column="2"
                        Width="32"
                        Height="32"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Top"
                        Click="OnCloseClick"
                        Tag="{x:Bind Id, Mode=OneWay}">
                        <FontIcon
                            Glyph="&#xE711;"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <!-- Container principal -->
    <Grid
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="0,0,20,20"
        MaxWidth="420"
        IsHitTestVisible="True">
        
        <ItemsControl
            ItemsSource="{x:Bind ViewModel.ActiveNotifications, Mode=OneWay}"
            ItemTemplate="{StaticResource NotificationCardTemplate}"
            IsHitTestVisible="True">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Spacing="0"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <!-- Animación de entrada/salida -->
            <ItemsControl.ItemContainerTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="100"/>
                    <RepositionThemeTransition/>
                </TransitionCollection>
            </ItemsControl.ItemContainerTransitions>
        </ItemsControl>
    </Grid>
</UserControl>
