<Page
    x:Class="GestionTime.Desktop.Views.ParteItemEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:GestionTime.Desktop.Helpers"
    xmlns:media="using:Microsoft.UI.Xaml.Media"
    mc:Ignorable="d"
    Background="Transparent">

    <!-- ===================== RESOURCES - PALETA EXACTA PANTALLAZO ===================== -->
    <Page.Resources>
        <ResourceDictionary>
            <!-- 🎨 PALETA DE COLORES EXACTA DEL PANTALLAZO -->
            <SolidColorBrush x:Key="AccentBrush" Color="#16A8B8"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="#0F1419"/>
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1A2332"/>
            <SolidColorBrush x:Key="CardBorderBrush" Color="#2D3E50"/>
            <SolidColorBrush x:Key="InputBackgroundBrush" Color="#0D1117"/>
            <SolidColorBrush x:Key="InputBorderBrush" Color="#30363D"/>
            <SolidColorBrush x:Key="InputFocusBorderBrush" Color="#16A8B8"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E6EDF3"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#AAB4BF"/>
            <SolidColorBrush x:Key="TextPlaceholderBrush" Color="#484F58"/>
            <SolidColorBrush x:Key="HeaderBrush" Color="#16A8B8"/>
            <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#0D1117"/>
            <SolidColorBrush x:Key="BadgeGreenBrush" Color="#238636"/>
            
            <!-- 📝 ESTILO TEXTBOX -->
            <Style x:Key="ModernTextBox" TargetType="TextBox">
                <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Height" Value="38"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
            
            <!-- 📝 ESTILO AUTOSUGGESTBOX -->
            <Style x:Key="ModernAutoSuggestBox" TargetType="AutoSuggestBox">
                <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Height" Value="38"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="TextMemberPath" Value=""/>
                <Setter Property="TextBoxStyle">
                    <Setter.Value>
                        <Style TargetType="TextBox">
                            <Setter Property="TextAlignment" Value="Left"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- 📅 ESTILO DATEPICKER -->
            <Style x:Key="ModernDatePicker" TargetType="CalendarDatePicker">
                <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Height" Value="38"/>
            </Style>
            
            <!-- 🔽 ESTILO COMBOBOX -->
            <Style x:Key="ModernComboBox" TargetType="ComboBox">
                <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Height" Value="38"/>
            </Style>
            
            <!-- 🔘 BOTÓN PRIMARIO (GRABAR) -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="MinWidth" Value="100"/>
                <Setter Property="Height" Value="40"/>
            </Style>
            
            <!-- 🔘 BOTÓN SECUNDARIO (ANULAR/SALIR) -->
            <Style x:Key="SecondaryButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="MinWidth" Value="100"/>
                <Setter Property="Height" Value="40"/>
            </Style>
            
            <!-- 📌 LABEL CAMPO -->
            <Style x:Key="FieldLabel" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Margin" Value="0,0,0,4"/>
            </Style>
            
            <!-- 🏷️ SECTION TITLE -->
            <Style x:Key="SectionTitle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <!-- ===================== MAIN GRID CON FONDO OSCURO ===================== -->
    <Grid x:Name="RootGrid" Padding="6" RowSpacing="6" Opacity="0">
        <!-- FONDO OSCURO SÓLIDO (sin textura) -->
        <Grid.Background>
            <SolidColorBrush Color="#0F1419"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Header -->
            <RowDefinition Height="*"/>      <!-- Content -->
            <RowDefinition Height="Auto"/>   <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- ===================== HEADER - BANNER TEAL ===================== -->
        <Border Grid.Row="0" 
                Background="{StaticResource HeaderBrush}" 
                CornerRadius="6" 
                Padding="10">
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- LOGO -->
                <Image x:Name="LogoImageBanner" 
                       Grid.Column="0"
                       Source="ms-appx:///Assets/LogoOscuro.png" 
                       Stretch="Uniform"
                       MaxHeight="50"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
                
                <!-- TÍTULO + USUARIO -->
                <StackPanel Grid.Column="1" 
                            VerticalAlignment="Center" 
                            Spacing="1"
                            Margin="8,0,0,0">
                    <!-- Título -->
                    <TextBlock x:Name="TxtTituloParte" 
                               Text="Nuevo Parte"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    
                    <!-- Usuario: Icono + Nombre • Rol + Email -->
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE77B;" 
                                  FontSize="12" 
                                  Foreground="White" 
                                  Opacity="0.9"
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtUserName" 
                                   Text="Francisco Santos"
                                   FontSize="12"
                                   Foreground="White"
                                   Opacity="0.95"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="•" 
                                   FontSize="12"
                                   Foreground="White"
                                   Opacity="0.6"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtUserRole" 
                                   Text="Usuario"
                                   FontSize="12"
                                   Foreground="White"
                                   Opacity="0.9"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Email -->
                    <TextBlock x:Name="TxtUserEmail" 
                               Text="msn@tdkportal.com"
                               FontSize="11"
                               Foreground="White"
                               Opacity="0.75"/>
                </StackPanel>
                
                <!-- BADGE ESTADO -->
                <Border x:Name="BadgeEstado"
                        Grid.Column="2"
                        Background="{StaticResource BadgeGreenBrush}"
                        CornerRadius="4"
                        Padding="10,4"
                        VerticalAlignment="Center">
                    <TextBlock x:Name="TxtEstadoParte" 
                               Text="Abierto"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </Border>
            </Grid>
        </Border>

        <!-- ===================== CONTENT - 3 CARDS CON GRID ===================== -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Padding="0,6,0,6">
            <Grid MaxWidth="1400" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>   <!-- Card 1: Datos Generales -->
                    <RowDefinition Height="Auto"/>   <!-- Card 2: Información de Tiempo -->
                    <RowDefinition Height="*"/>      <!-- Card 3: Descripción/Acción (estirable) -->
                </Grid.RowDefinitions>
                
                <!-- ========== CARD 1: DATOS GENERALES ========== -->
                <Border Grid.Row="0"
                        Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12">
                    <StackPanel Spacing="10">
                        <!-- Título Sección -->
                        <TextBlock Text="DATOS GENERALES" 
                                   Style="{StaticResource SectionTitle}"/>
                        
                        <!-- Grid 3 columnas: Fecha | Cliente | Tienda -->
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- FECHA -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Fecha" Style="{StaticResource FieldLabel}"/>
                                <CalendarDatePicker x:Name="DpFecha"
                                                    Style="{StaticResource ModernDatePicker}"
                                                    TabIndex="1"
                                                    DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                                                    DateChanged="OnFieldChanged"/>
                            </StackPanel>
                            
                            <!-- CLIENTE -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Cliente" Style="{StaticResource FieldLabel}"/>
                                <AutoSuggestBox x:Name="TxtCliente"
                                                Style="{StaticResource ModernAutoSuggestBox}"
                                                TabIndex="2"
                                                PlaceholderText="Escriba para buscar cliente..."
                                                TextChanged="OnClienteTextChanged"
                                                SuggestionChosen="OnClienteSuggestionChosen"
                                                QuerySubmitted="OnClienteQuerySubmitted"
                                                HorizontalContentAlignment="Left"/>
                            </StackPanel>
                            
                            <!-- TIENDA -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Tienda" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="TxtTienda" 
                                         Style="{StaticResource ModernTextBox}"
                                         TabIndex="3"
                                         TextChanged="OnFieldChanged"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- ========== CARD 2: INFORMACIÓN DE TIEMPO ========== -->
                <Border Grid.Row="1"
                        Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12">
                    <StackPanel Spacing="10">
                        <!-- Título Sección -->
                        <TextBlock Text="INFORMACIÓN DE TIEMPO" 
                                   Style="{StaticResource SectionTitle}"/>
                        
                        <!-- Grid 5 columnas: Hora Ini | Hora Fin | Ticket | Grupo | Tipo -->
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- HORA INICIO -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Hora ini." Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="TxtHoraInicio" 
                                         Style="{StaticResource ModernTextBox}"
                                         TabIndex="4"
                                         MaxLength="5"
                                         PlaceholderText="HH:mm"
                                         TextChanged="OnHoraTextChanged"/>
                            </StackPanel>
                            
                            <!-- HORA FIN -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Hora fin." Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="TxtHoraFin" 
                                         Style="{StaticResource ModernTextBox}"
                                         TabIndex="5"
                                         MaxLength="5"
                                         PlaceholderText="HH:mm"
                                         TextChanged="OnHoraTextChanged"/>
                            </StackPanel>
                            
                            <!-- TICKET -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Ticket" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="TxtTicket" 
                                         Style="{StaticResource ModernTextBox}"
                                         TabIndex="6"
                                         TextChanged="OnFieldChanged"/>
                            </StackPanel>
                            
                            <!-- GRUPO -->
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Grupo" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="CmbGrupo"
                                          Style="{StaticResource ModernComboBox}"
                                          IsEditable="True"
                                          TabIndex="7"
                                          HorizontalAlignment="Stretch"
                                          SelectionChanged="OnFieldChanged"/>
                            </StackPanel>
                            
                            <!-- TIPO -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Tipo" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="CmbTipo"
                                          Style="{StaticResource ModernComboBox}"
                                          IsEditable="True"
                                          TabIndex="8"
                                          HorizontalAlignment="Stretch"
                                          SelectionChanged="OnFieldChanged"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- ========== CARD 3: DESCRIPCIÓN / ACCIÓN (ESTIRABLE) ========== -->
                <Border Grid.Row="2"
                        Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        VerticalAlignment="Stretch">
                    <Grid RowSpacing="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>    <!-- Título -->
                            <RowDefinition Height="*"/>       <!-- TextBox estirable -->
                        </Grid.RowDefinitions>
                        
                        <!-- Título Sección -->
                        <TextBlock Grid.Row="0"
                                   Text="DESCRIPCIÓN / ACCIÓN" 
                                   Style="{StaticResource SectionTitle}"/>
                        
                        <!-- Campo grande multiline (ESTIRABLE) -->
                        <TextBox Grid.Row="1"
                                 x:Name="TxtAccion" 
                                 Background="{StaticResource InputBackgroundBrush}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderBrush="{StaticResource InputBorderBrush}"
                                 BorderThickness="1"
                                 CornerRadius="6"
                                 Padding="12,10"
                                 FontSize="14"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 MinHeight="120"
                                 VerticalAlignment="Stretch"
                                 VerticalContentAlignment="Top"
                                 TabIndex="9"
                                 PlaceholderText="Describe la acción realizada..."
                                 TextChanged="OnFieldChanged"
                                 PreviewKeyDown="OnAccionPreviewKeyDown"
                                 TextChanging="OnAccionTextChanging"
                                 GotFocus="OnAccionGotFocus"/>
                    </Grid>
                </Border>
                
                <!-- CAMPOS OCULTOS (compatibilidad) -->
                <StackPanel Grid.Row="3" Visibility="Collapsed">
                    <TextBox x:Name="TxtDuracion" IsTabStop="False"/>
                    <TextBox x:Name="TxtGrupo" IsTabStop="False"/>
                    <TextBox x:Name="TxtTipo" IsTabStop="False"/>
                    <TextBox x:Name="TxtTecnico" IsTabStop="False"/>
                    <TextBox x:Name="TxtEstado" IsTabStop="False"/>
                    <Button x:Name="BtnAccionGrabar" IsTabStop="False"/>
                </StackPanel>
                
            </Grid>
        </ScrollViewer>

        <!-- ===================== FOOTER - BOTONERA FIJA ===================== -->
        <Border Grid.Row="2" 
                Background="{StaticResource FooterBackgroundBrush}"
                Padding="16,12">
            <StackPanel Orientation="Horizontal" 
                        Spacing="12"
                        HorizontalAlignment="Right">
                
                <!-- GRABAR (PRIMARIO - TEAL) -->
                <Button x:Name="BtnGuardar" 
                        Style="{StaticResource PrimaryButton}"
                        TabIndex="12"
                        Click="OnGuardarClick"
                        IsEnabled="False"
                        Width="80"
                        Height="70"
                        PointerEntered="OnButtonPointerEntered"
                        PointerExited="OnButtonPointerExited">
                    <StackPanel Spacing="4">
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE74E;" 
                                  FontSize="24"
                                  Foreground="White"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Grabar" 
                                   FontSize="11" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- ANULAR (SECUNDARIO) -->
                <Button x:Name="BtnCancelar" 
                        Style="{StaticResource SecondaryButton}"
                        TabIndex="13"
                        Click="OnCancelarClick"
                        Width="80"
                        Height="70"
                        PointerEntered="OnButtonPointerEntered"
                        PointerExited="OnButtonPointerExited">
                    <StackPanel Spacing="4">
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE711;" 
                                  FontSize="24"
                                  Foreground="#F59E0B"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Anular" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- SALIR (SECUNDARIO) -->
                <Button x:Name="BtnSalir" 
                        Style="{StaticResource SecondaryButton}"
                        TabIndex="14"
                        Click="OnSalirClick"
                        Width="80"
                        Height="70"
                        PointerEntered="OnButtonPointerEntered"
                        PointerExited="OnButtonPointerExited">
                    <StackPanel Spacing="4">
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE7E8;" 
                                  FontSize="24"
                                  Foreground="#EF4444"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Salir" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
            </StackPanel>
        </Border>

    </Grid>
</Page>
