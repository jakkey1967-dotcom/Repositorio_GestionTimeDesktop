<Page
    x:Class="GestionTime.Desktop.Views.ForgotPasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent"
    RequestedTheme="Dark">
    
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                
                <!-- TEMA OSCURO -->
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="PageBackground" Color="#1a1d21"/>
                    <SolidColorBrush x:Key="CardBackground" Color="#2c3e50"/>
                    <SolidColorBrush x:Key="InputBackground" Color="#1f2937"/>
                    <SolidColorBrush x:Key="InputForeground" Color="#f3f4f6"/>
                    <SolidColorBrush x:Key="TitleForeground" Color="#e5e7eb"/>
                    <SolidColorBrush x:Key="LabelForeground" Color="#9ca3af"/>
                    <SolidColorBrush x:Key="TealPrimary" Color="#098ca3"/>
                    <SolidColorBrush x:Key="TealDark" Color="#076b7d"/>
                    <SolidColorBrush x:Key="TealLight" Color="#0bb3cf"/>
                    <ImageBrush x:Key="BackgroundImage" ImageSource="ms-appx:///Assets/login_fondoOscuro.png" Stretch="UniformToFill"/>
                </ResourceDictionary>
                
                <!-- TEMA CLARO -->
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="PageBackground" Color="#f3f4f6"/>
                    <SolidColorBrush x:Key="CardBackground" Color="#ffffff"/>
                    <SolidColorBrush x:Key="InputBackground" Color="#ffffff"/>
                    <SolidColorBrush x:Key="InputForeground" Color="#1f2937"/>
                    <SolidColorBrush x:Key="TitleForeground" Color="#1a3b47"/>
                    <SolidColorBrush x:Key="LabelForeground" Color="#6b7280"/>
                    <SolidColorBrush x:Key="TealPrimary" Color="#098ca3"/>
                    <SolidColorBrush x:Key="TealDark" Color="#076b7d"/>
                    <SolidColorBrush x:Key="TealLight" Color="#0bb3cf"/>
                    <ImageBrush x:Key="BackgroundImage" ImageSource="ms-appx:///Assets/login_fondoClaro.png" Stretch="UniformToFill"/>
                </ResourceDictionary>
                
            </ResourceDictionary.ThemeDictionaries>

            <!-- Estilo TextBox moderno con tema -->
            <Style x:Key="ModernTextBox" TargetType="TextBox">
                <Setter Property="Background" Value="{ThemeResource InputBackground}"/>
                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                <Setter Property="BorderBrush" Value="{ThemeResource TealPrimary}"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{ThemeResource InputForeground}"/>
            </Style>

            <!-- Estilo PasswordBox moderno con tema -->
            <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
                <Setter Property="Background" Value="{ThemeResource InputBackground}"/>
                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                <Setter Property="BorderBrush" Value="{ThemeResource TealPrimary}"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{ThemeResource InputForeground}"/>
            </Style>

            <!-- Estilo Botón principal -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="{ThemeResource TealPrimary}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="CornerRadius" Value="25"/>
                <Setter Property="Padding" Value="40,12"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>

            <!-- Estilo HyperlinkButton -->
            <Style x:Key="LinkButton" TargetType="HyperlinkButton">
                <Setter Property="Foreground" Value="{ThemeResource TealPrimary}"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="PageRootGrid" Opacity="0">
        <!-- Fondo con imagen dinámica según tema -->
        <Grid.Background>
            <ThemeResource ResourceKey="BackgroundImage"/>
        </Grid.Background>

        <!-- Selector de tema (esquina superior izquierda) -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="20"
                    Spacing="8">
            <Button x:Name="BtnTheme"
                    Width="40"
                    Height="40"
                    CornerRadius="20"
                    Background="{ThemeResource CardBackground}"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource TealPrimary}"
                    ToolTipService.ToolTip="Tema">
                <FontIcon FontFamily="Segoe MDL2 Assets" 
                          Glyph="&#xE700;" 
                          FontSize="18"
                          Foreground="{ThemeResource TealPrimary}"/>
                <Button.Flyout>
                    <MenuFlyout>
                        <ToggleMenuFlyoutItem x:Name="ThemeSystemItem" 
                                              Text="Tema del sistema" 
                                              Click="OnThemeSystem"/>
                        <ToggleMenuFlyoutItem x:Name="ThemeLightItem" 
                                              Text="Tema claro" 
                                              Click="OnThemeLight"/>
                        <ToggleMenuFlyoutItem x:Name="ThemeDarkItem" 
                                              Text="Tema oscuro" 
                                              Click="OnThemeDark"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </StackPanel>

        <!-- Botón Volver (esquina superior derecha) -->
        <Button x:Name="BtnBack"
                Width="40"
                Height="40"
                CornerRadius="20"
                Background="{ThemeResource CardBackground}"
                BorderThickness="1"
                BorderBrush="{ThemeResource TealPrimary}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20"
                Click="OnBackClick"
                ToolTipService.ToolTip="Volver al login">
            <FontIcon FontFamily="Segoe MDL2 Assets" 
                      Glyph="&#xE72B;" 
                      FontSize="18"
                      Foreground="{ThemeResource TealPrimary}"/>
        </Button>

        <!-- Card del formulario -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="50,50,50,50">
            <Border x:Name="ForgotPasswordCard"
                    Width="360" 
                    CornerRadius="20"
                    Background="{ThemeResource CardBackground}"
                    Padding="24,20">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>

                <StackPanel VerticalAlignment="Top"
                            Spacing="10">

                    <!-- Título -->
                    <TextBlock Text="Recuperar Contraseña"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{ThemeResource TitleForeground}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,4"/>

                    <TextBlock x:Name="TxtInstrucciones"
                               Text="Paso 1: Ingresa tu correo para recibir el código de verificación."
                               FontSize="12"
                               Foreground="{ThemeResource LabelForeground}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>

                    <!-- Correo electrónico -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="Correo electrónico"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource LabelForeground}"/>
                        <TextBox x:Name="TxtEmail"
                                 Style="{StaticResource ModernTextBox}"
                                 PlaceholderText="correo@dominio.com"
                                 Height="38"/>
                    </StackPanel>

                    <!-- Botón Solicitar Código (Paso 1) -->
                    <Button x:Name="BtnSolicitarCodigo"
                            Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Stretch"
                            Click="OnSolicitarCodigoClick"
                            Margin="0,12,0,0"
                            Height="44">
                        <StackPanel Orientation="Horizontal" 
                                    Spacing="8"
                                    HorizontalAlignment="Center">
                            <ProgressRing x:Name="PrgSolicitar"
                                          Width="16" Height="16"
                                          IsActive="False"
                                          Visibility="Collapsed"
                                          Foreground="White"/>
                            <TextBlock Text="Solicitar código" FontSize="15"/>
                        </StackPanel>
                    </Button>

                    <!-- Separador -->
                    <Border Height="1" 
                            Background="{ThemeResource LabelForeground}" 
                            Opacity="0.3"
                            Margin="0,16,0,16"
                            x:Name="Separador"
                            Visibility="Collapsed"/>

                    <!-- Campos de verificación (Paso 2) - Inicialmente ocultos -->
                    <StackPanel x:Name="PanelVerificacion"
                                Spacing="10"
                                Visibility="Collapsed">

                        <!-- Código de verificación -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Código de verificación (6 dígitos)"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource LabelForeground}"/>
                            <TextBox x:Name="TxtCodigo"
                                     Style="{StaticResource ModernTextBox}"
                                     PlaceholderText="123456"
                                     MaxLength="6"
                                     InputScope="Number"
                                     Height="38"/>
                        </StackPanel>

                        <!-- Nueva contraseña -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Nueva contraseña"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource LabelForeground}"/>
                            <PasswordBox x:Name="TxtPassword"
                                         Style="{StaticResource ModernPasswordBox}"
                                         PlaceholderText="Ingrese nueva contraseña"
                                         Height="38"/>
                        </StackPanel>

                        <!-- Confirmar contraseña -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Repetir contraseña"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource LabelForeground}"/>
                            <PasswordBox x:Name="TxtConfirmPassword"
                                         Style="{StaticResource ModernPasswordBox}"
                                         PlaceholderText="Repita la contraseña"
                                         Height="38"/>
                        </StackPanel>

                        <!-- Botón Cambiar Contraseña (Paso 2) -->
                        <Button x:Name="BtnCambiarPassword"
                                Style="{StaticResource PrimaryButton}"
                                HorizontalAlignment="Stretch"
                                Click="OnCambiarPasswordClick"
                                Margin="0,12,0,0"
                                Height="44">
                            <StackPanel Orientation="Horizontal" 
                                        Spacing="8"
                                        HorizontalAlignment="Center">
                                <ProgressRing x:Name="PrgCambiar"
                                              Width="16" Height="16"
                                              IsActive="False"
                                              Visibility="Collapsed"
                                              Foreground="White"/>
                                <TextBlock Text="Cambiar contraseña" FontSize="15"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>

                    <!-- Mensaje de error/éxito -->
                    <Border x:Name="MsgBox"
                            Visibility="Collapsed"
                            Background="#FEF3C7"
                            BorderBrush="#F59E0B"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="10,8"
                            Margin="0,8,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <FontIcon Grid.Column="0"
                                      x:Name="MsgIcon"
                                      Glyph="&#xE7BA;"
                                      FontSize="14"
                                      Foreground="#D97706"
                                      VerticalAlignment="Top"
                                      Margin="0,1,8,0"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="LblMsg"
                                       TextWrapping="Wrap"
                                       FontSize="11"
                                       LineHeight="16"
                                       Foreground="#92400E"/>
                        </Grid>
                    </Border>

                    <!-- Status -->
                    <TextBlock x:Name="TxtStatus"
                               Text=""
                               Foreground="{ThemeResource LabelForeground}"
                               FontSize="10"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,4,0,0"
                               Visibility="Collapsed"/>

                    <!-- Link volver al login -->
                    <HyperlinkButton Content="Volver al inicio de sesión"
                                     Click="OnBackClick"
                                     Style="{StaticResource LinkButton}"
                                     HorizontalAlignment="Center"
                                     FontSize="11"
                                     Padding="0,1"
                                     Margin="0,8,0,0"/>

                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
