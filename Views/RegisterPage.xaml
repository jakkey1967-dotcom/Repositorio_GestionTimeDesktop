<Page
    x:Class="GestionTime.Desktop.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent"
    RequestedTheme="Dark">
    
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                
                <!-- TEMA OSCURO -->
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="PageBackground" Color="#1a1d21"/>
                    <SolidColorBrush x:Key="CardBackground" Color="#2c3e50"/>
                    <SolidColorBrush x:Key="InputBackground" Color="#1f2937"/>
                    <SolidColorBrush x:Key="InputForeground" Color="#f3f4f6"/>
                    <SolidColorBrush x:Key="TitleForeground" Color="#e5e7eb"/>
                    <SolidColorBrush x:Key="LabelForeground" Color="#9ca3af"/>
                    <SolidColorBrush x:Key="TealPrimary" Color="#098ca3"/>
                    <SolidColorBrush x:Key="TealDark" Color="#076b7d"/>
                    <SolidColorBrush x:Key="TealLight" Color="#0bb3cf"/>
                    <ImageBrush x:Key="BackgroundImage" ImageSource="ms-appx:///Assets/login_fondoOscuro.png" Stretch="UniformToFill"/>
                </ResourceDictionary>
                
                <!-- TEMA CLARO -->
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="PageBackground" Color="#f3f4f6"/>
                    <SolidColorBrush x:Key="CardBackground" Color="#ffffff"/>
                    <SolidColorBrush x:Key="InputBackground" Color="#ffffff"/>
                    <SolidColorBrush x:Key="InputForeground" Color="#1f2937"/>
                    <SolidColorBrush x:Key="TitleForeground" Color="#1a3b47"/>
                    <SolidColorBrush x:Key="LabelForeground" Color="#6b7280"/>
                    <SolidColorBrush x:Key="TealPrimary" Color="#098ca3"/>
                    <SolidColorBrush x:Key="TealDark" Color="#076b7d"/>
                    <SolidColorBrush x:Key="TealLight" Color="#0bb3cf"/>
                    <ImageBrush x:Key="BackgroundImage" ImageSource="ms-appx:///Assets/login_fondoClaro.png" Stretch="UniformToFill"/>
                </ResourceDictionary>
                
            </ResourceDictionary.ThemeDictionaries>

            <!-- Estilo TextBox moderno con tema -->
            <Style x:Key="ModernTextBox" TargetType="TextBox">
                <Setter Property="Background" Value="{ThemeResource InputBackground}"/>
                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                <Setter Property="BorderBrush" Value="{ThemeResource TealPrimary}"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{ThemeResource InputForeground}"/>
            </Style>

            <!-- Estilo PasswordBox moderno con tema -->
            <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
                <Setter Property="Background" Value="{ThemeResource InputBackground}"/>
                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                <Setter Property="BorderBrush" Value="{ThemeResource TealPrimary}"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{ThemeResource InputForeground}"/>
            </Style>

            <!-- Estilo Botón principal -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="{ThemeResource TealPrimary}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="CornerRadius" Value="25"/>
                <Setter Property="Padding" Value="40,12"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>

            <!-- Estilo HyperlinkButton -->
            <Style x:Key="LinkButton" TargetType="HyperlinkButton">
                <Setter Property="Foreground" Value="{ThemeResource TealPrimary}"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="PageRootGrid" Opacity="0">
        <!-- Fondo con imagen dinámica según tema -->
        <Grid.Background>
            <ThemeResource ResourceKey="BackgroundImage"/>
        </Grid.Background>

        <!-- Selector de tema (esquina superior izquierda) -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="20"
                    Spacing="8">
            <Button x:Name="BtnTheme"
                    Width="40"
                    Height="40"
                    CornerRadius="20"
                    Background="{ThemeResource CardBackground}"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource TealPrimary}"
                    ToolTipService.ToolTip="Tema">
                <FontIcon FontFamily="Segoe MDL2 Assets" 
                          Glyph="&#xE700;" 
                          FontSize="18"
                          Foreground="{ThemeResource TealPrimary}"/>
                <Button.Flyout>
                    <MenuFlyout>
                        <ToggleMenuFlyoutItem x:Name="ThemeSystemItem" 
                                              Text="Tema del sistema" 
                                              Click="OnThemeSystem"/>
                        <ToggleMenuFlyoutItem x:Name="ThemeLightItem" 
                                              Text="Tema claro" 
                                              Click="OnThemeLight"/>
                        <ToggleMenuFlyoutItem x:Name="ThemeDarkItem" 
                                              Text="Tema oscuro" 
                                              Click="OnThemeDark"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </StackPanel>

        <!-- Botón Volver (esquina superior derecha) -->
        <Button x:Name="BtnBack"
                Width="40"
                Height="40"
                CornerRadius="20"
                Background="{ThemeResource CardBackground}"
                BorderThickness="1"
                BorderBrush="{ThemeResource TealPrimary}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20"
                Click="OnBackClick"
                ToolTipService.ToolTip="Volver al login">
            <FontIcon FontFamily="Segoe MDL2 Assets" 
                      Glyph="&#xE72B;" 
                      FontSize="18"
                      Foreground="{ThemeResource TealPrimary}"/>
        </Button>

        <!-- Card del formulario -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="50,50,50,50">
            <Border x:Name="RegisterCard"
                    Width="320" 
                    CornerRadius="20"
                    Background="{ThemeResource CardBackground}"
                    Padding="20,20">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>

                <StackPanel VerticalAlignment="Top"
                            Spacing="10">

                    <!-- Título -->
                    <TextBlock Text="Registro de Usuario"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{ThemeResource TitleForeground}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Complete los siguientes datos"
                               FontSize="11"
                               Foreground="{ThemeResource LabelForeground}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>

                    <!-- Nombre completo -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Nombre completo *"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource LabelForeground}"/>
                        <TextBox x:Name="TxtNombre"
                                 Style="{StaticResource ModernTextBox}"
                                 PlaceholderText="Juan Pérez"
                                 Height="36"/>
                    </StackPanel>

                    <!-- Correo electrónico -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Correo electrónico *"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource LabelForeground}"/>
                        <TextBox x:Name="TxtEmail"
                                 Style="{StaticResource ModernTextBox}"
                                 PlaceholderText="correo@dominio.com"
                                 Height="36"/>
                    </StackPanel>

                    <!-- Contraseña -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Contraseña *"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource LabelForeground}"/>
                        <Grid>
                            <PasswordBox x:Name="TxtPassword"
                                         Style="{StaticResource ModernPasswordBox}"
                                         PlaceholderText="••••••••"
                                         Height="36"
                                         Visibility="Visible"/>
                            <TextBox x:Name="TxtPasswordVisible"
                                     Style="{StaticResource ModernTextBox}"
                                     PlaceholderText="••••••••"
                                     Height="36"
                                     Visibility="Collapsed"/>
                            <Button x:Name="BtnTogglePassword"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"
                                    Width="32"
                                    Height="32"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="OnTogglePasswordClick"
                                    ToolTipService.ToolTip="Mostrar/Ocultar contraseña">
                                <FontIcon x:Name="IconPassword"
                                          Glyph="&#xE7B3;"
                                          FontSize="16"
                                          Foreground="{ThemeResource TealPrimary}"/>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Confirmar contraseña -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Confirmar contraseña *"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource LabelForeground}"/>
                        <Grid>
                            <PasswordBox x:Name="TxtConfirmPassword"
                                         Style="{StaticResource ModernPasswordBox}"
                                         PlaceholderText="••••••••"
                                         Height="36"
                                         Visibility="Visible"/>
                            <TextBox x:Name="TxtConfirmPasswordVisible"
                                     Style="{StaticResource ModernTextBox}"
                                     PlaceholderText="••••••••"
                                     Height="36"
                                     Visibility="Collapsed"/>
                            <Button x:Name="BtnToggleConfirmPassword"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"
                                    Width="32"
                                    Height="32"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="OnToggleConfirmPasswordClick"
                                    ToolTipService.ToolTip="Mostrar/Ocultar contraseña">
                                <FontIcon x:Name="IconConfirmPassword"
                                          Glyph="&#xE7B3;"
                                          FontSize="16"
                                          Foreground="{ThemeResource TealPrimary}"/>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Empresa (opcional) -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Empresa (opcional)"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource LabelForeground}"/>
                        <TextBox x:Name="TxtEmpresa"
                                 Style="{StaticResource ModernTextBox}"
                                 PlaceholderText="Nombre de la empresa"
                                 Height="36"/>
                    </StackPanel>

                    <!-- Botón Registrarse -->
                    <Button x:Name="BtnRegister"
                            Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Center"
                            Click="OnRegisterClick"
                            Margin="0,12,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <ProgressRing x:Name="Prg"
                                          Width="16" Height="16"
                                          IsActive="False"
                                          Visibility="Collapsed"
                                          Foreground="White"/>
                            <TextBlock Text="Crear cuenta" FontSize="15"/>
                        </StackPanel>
                    </Button>

                    <!-- Status -->
                    <TextBlock x:Name="TxtStatus"
                               Text=""
                               Foreground="{ThemeResource LabelForeground}"
                               FontSize="10"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,4,0,0"
                               Visibility="Collapsed"/>

                    <!-- Link volver al login -->
                    <HyperlinkButton Content="Ya tengo cuenta, iniciar sesión"
                                     Click="OnBackClick"
                                     Style="{StaticResource LinkButton}"
                                     HorizontalAlignment="Center"
                                     FontSize="11"
                                     Padding="0,1"
                                     Margin="0,8,0,0"/>

                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
