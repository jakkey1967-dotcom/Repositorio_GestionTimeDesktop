<Window
    x:Class="GestionTime.Desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:GestionTime.Desktop.Controls">

    <Grid>
        <!-- Capa principal: Navegación -->
        <Frame x:Name="RootFrame"/>
        
        <!-- Capa overlay: Notificaciones -->
        <!-- IMPORTANTE: El contenedor NO debe ser hit-testable, pero SÍ las notificaciones dentro -->
        <Grid 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            IsHitTestVisible="False"
            Background="Transparent">
            
            <controls:NotificationHost
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                IsHitTestVisible="True"/>
        </Grid>
    </Grid>
</Window>

