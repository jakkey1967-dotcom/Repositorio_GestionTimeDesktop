<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="GestionTime.Desktop.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GestionTime.Desktop"
    xmlns:helpers="using:GestionTime.Desktop.Helpers">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- CONVERTERS GLOBALES -->
            <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <helpers:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <helpers:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <helpers:EstadoToColorConverter x:Key="EstadoToColorConverter"/>
            <helpers:EstadoToIconConverter x:Key="EstadoToIconConverter"/>
            <helpers:EstadoToActionVisibilityConverter x:Key="EstadoToActionVisibilityConverter"/>
            <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <helpers:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>

            <!-- GLOBAL THEME SYSTEM -->
            <ResourceDictionary.ThemeDictionaries>
                <!-- TEMA OSCURO (Default) -->
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="AppBgFallback" Color="#0F1113"/>
                    <SolidColorBrush x:Key="AppBg" Color="#0F1113"/>
                    <SolidColorBrush x:Key="SurfaceBg" Color="#1A1D21"/>
                    <SolidColorBrush x:Key="CardBg" Color="#121416"/>
                    <SolidColorBrush x:Key="Stroke" Color="#30363D"/>
                    <SolidColorBrush x:Key="TextMain" Color="#EDEFF2"/>
                    <SolidColorBrush x:Key="TextMuted" Color="#A8B0B8"/>
                    <SolidColorBrush x:Key="Accent" Color="#0B8C99"/>
                    <SolidColorBrush x:Key="AccentDark" Color="#08707A"/>
                    <SolidColorBrush x:Key="InputBg" Color="#0B8C99"/>
                    <SolidColorBrush x:Key="InputText" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="InputBorder" Color="#0B8C99"/>
                    <SolidColorBrush x:Key="ButtonBg" Color="#1E2328"/>
                    <SolidColorBrush x:Key="ButtonStroke" Color="#30363D"/>
                    <SolidColorBrush x:Key="BannerBg" Color="#0B8C99"/>
                    <SolidColorBrush x:Key="EvenRowBrush" Color="#121820"/>
                    <SolidColorBrush x:Key="OddRowBrush" Color="#141C24"/>
                    <BitmapImage x:Key="LogoImage" UriSource="ms-appx:///Assets/LogoOscuro.png"/>
                    <SolidColorBrush x:Key="AppPrimaryBrush" Color="#0B8C99"/>
                    <SolidColorBrush x:Key="AppOnPrimaryBrush" Color="#001E22"/>
                    <SolidColorBrush x:Key="AppPrimaryContainerBrush" Color="#0A3A40"/>
                    <SolidColorBrush x:Key="AppOnPrimaryContainerBrush" Color="#BDECF1"/>
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#0B0F10"/>
                    <SolidColorBrush x:Key="AppSurfaceBrush" Color="#12181A"/>
                    <SolidColorBrush x:Key="AppSurfaceVariantBrush" Color="#1A2427"/>
                    <SolidColorBrush x:Key="AppOnSurfaceBrush" Color="#E6F3F5"/>
                    <SolidColorBrush x:Key="AppOnSurfaceMutedBrush" Color="#A8BCC0"/>
                    <SolidColorBrush x:Key="AppOutlineBrush" Color="#324246"/>
                    <SolidColorBrush x:Key="AppRowAltBrush" Color="#101618"/>
                    <SolidColorBrush x:Key="AppErrorBrush" Color="#F2B8B5"/>
                    <SolidColorBrush x:Key="AppOnErrorBrush" Color="#3A0A07"/>
                </ResourceDictionary>

                <!-- TEMA CLARO (Light) -->
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="AppBgFallback" Color="#F4F7FA"/>
                    <SolidColorBrush x:Key="AppBg" Color="#F4F7FA"/>
                    <SolidColorBrush x:Key="SurfaceBg" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="CardBg" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="Stroke" Color="#D8E1EA"/>
                    <SolidColorBrush x:Key="TextMain" Color="#0F172A"/>
                    <SolidColorBrush x:Key="TextMuted" Color="#475569"/>
                    <SolidColorBrush x:Key="Accent" Color="#0FA7B6"/>
                    <SolidColorBrush x:Key="AccentDark" Color="#0B8C99"/>
                    <SolidColorBrush x:Key="InputBg" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="InputText" Color="#0F172A"/>
                    <SolidColorBrush x:Key="InputBorder" Color="#CBD5E1"/>
                    <SolidColorBrush x:Key="ButtonBg" Color="#F8FAFC"/>
                    <SolidColorBrush x:Key="ButtonStroke" Color="#D8E1EA"/>
                    <SolidColorBrush x:Key="BannerBg" Color="#0FA7B6"/>
                    <SolidColorBrush x:Key="EvenRowBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="OddRowBrush" Color="#F7FAFC"/>
                    <BitmapImage x:Key="LogoImage" UriSource="ms-appx:///Assets/LogoClaro.png"/>
                    <SolidColorBrush x:Key="AppPrimaryBrush" Color="#0FA7B6"/>
                    <SolidColorBrush x:Key="AppOnPrimaryBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="AppPrimaryContainerBrush" Color="#CFEFF3"/>
                    <SolidColorBrush x:Key="AppOnPrimaryContainerBrush" Color="#00363C"/>
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F6FAFB"/>
                    <SolidColorBrush x:Key="AppSurfaceBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="AppSurfaceVariantBrush" Color="#E7F1F3"/>
                    <SolidColorBrush x:Key="AppOnSurfaceBrush" Color="#0D1B1C"/>
                    <SolidColorBrush x:Key="AppOnSurfaceMutedBrush" Color="#4B5B60"/>
                    <SolidColorBrush x:Key="AppOutlineBrush" Color="#B8C8CA"/>
                    <SolidColorBrush x:Key="AppRowAltBrush" Color="#F2FAFB"/>
                    <SolidColorBrush x:Key="AppErrorBrush" Color="#B3261E"/>
                    <SolidColorBrush x:Key="AppOnErrorBrush" Color="#FFFFFF"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
